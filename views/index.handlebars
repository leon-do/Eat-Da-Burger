<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<form>
		<input>
		<button type='submit' class='addButton'>Submit</button>
	</form>

	<br><br>


	{{#each unEaten}}
		<button type='submit' class='burgerButton' id={{this.id}}> {{this}} </button>
	{{/each}}

	<hr>

	{{#each eaten}}
		<button type='submit' class='burgerButton' id={{this.id}}> {{this}} </button>
	{{/each}}




	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

	<script>

		$(".addButton").on('click',function(){
			var input = $("input").val()
			$.post('http://localhost:3000/showBurger',{userInput:input})
		})


		$(".burgerButton").on('click',function(){
			var id = this.id;
			$.post('http://localhost:3000/moveBurger',
				{userInput:id}
			)
		})

	</script>
</body>
</html>